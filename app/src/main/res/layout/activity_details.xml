<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="415dp"
        android:layout_height="356dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/hedefAdi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="hedef adÄ±" />

        <TextView
            android:id="@+id/hedefAciklama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="hedefAciklama" />

        <TextView
            android:id="@+id/kategori"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="kategori" />

        <TextView
            android:id="@+id/baslangicTarihi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="baslangicTarihi" />

        <TextView
            android:id="@+id/bitisTarihi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="bitisTarihi" />

        <ListView
            android:id="@+id/altHedefler"
            android:layout_width="match_parent"
            android:layout_height="108dp" />

    </LinearLayout>

    <Button
        android:id="@+id/altHedefEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Alt Hedef Ekle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.028" />

    <TextView
        android:id="@+id/bilgi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.508" />

</androidx.constraintlayout.widget.ConstraintLayout>